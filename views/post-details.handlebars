{{#> main title=this.title}}
  <article>
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <footer>
      <p>Posted by {{this.user.username}}</p>
    </footer>
  </article>

  <section>
    <h3>Comments</h3>
    <ul>
      {{#each comments}}
        <li>{{this.content}} - by {{this.user.username}}</li>
      {{else}}
        <li>No comments yet</li>
      {{/each}}
    </ul>

    {{#if logged_in}}
      <form id="comment-form">
        <textarea id="comment-content" required></textarea>
        <button type="submit">Post Comment</button>
      </form>
    {{/if}}
  </section>
{{/main}}
